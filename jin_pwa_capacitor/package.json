{
  "name": "jin-stat-dashboard-v3",
  "version": "3.0.0",
  "private": true,
  "description": "진 스탯 대시보드 v3 (PWA + Capacitor wrapper)",
  "scripts": {
    "serve": "npx http-server ./www -p 5173 -c-1",
    "cap:init": "npx cap init \"진 스탯 대쉬보드 V3\" com.jin.statv3 --web-dir www",
    "cap:android": "npx cap add android",
    "cap:sync": "npx cap sync",
    "cap:open:android": "npx cap open android"
  },
  "devDependencies": {
    "@capacitor/android": "^8.1.0",
    "@capacitor/cli": "^6.2.1",
    "@capacitor/core": "^8.1.0",
    "http-server": "^14.1.1"
  }
}
